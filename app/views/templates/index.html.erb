<h1>Listing templates</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Matcher type</th>
    <th>Matcher value</th>
    <th>Target</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @templates.each do |template| %>
  <tr>
    <td><%= template.name %></td>
    <td><%= template.description %></td>
    <td><%= template.matcher_type %></td>
    <td><%= template.matcher_value %></td>
    <td><%= template.target %></td>
    <td><%= link_to 'Show', template %></td>
    <td><%= link_to 'Edit', edit_template_path(template) %></td>
    <td><%= link_to 'Destroy', template, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

